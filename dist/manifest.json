{
    "manifest_version": 3,
    "name": "NeoAtlantis Slate Browser",
    "description": "Browser side connector to NeoAtlantis Slate, a password protection module.",
    "version": "1.0.0",
    "background": {
        "scripts": ["background.js"],
        "type": "module"
    },
    "permissions": [
        "clipboardRead",
        "clipboardWrite",
        "scripting",
        "contextMenus",
        "tabs",
        "activeTab",
        "storage"
    ],
    "sidebar_action": {
        "default_title": "NeoAtlantis Slate",
        "default_icon": "static/icon-256x256.png",
        "default_panel": "options.html"
    },
    "action": {
        "default_icon": "static/icon-256x256.png",
        "default_title": "NeoAtlantis Slate"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "slate@plugins.neoatlantis.org",
            "strict_min_version": "112.0"
        }
    },
    "content_security_policy": {
        "extension_pages": "base-uri 'self'; default-src 'none'; style-src 'sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65'; script-src 'self'; img-src 'self'"
    }
}
