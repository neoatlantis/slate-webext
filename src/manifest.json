{
    "manifest_version": 3,
    "name": "NeoAtlantis Slate Browser",
    "description": "Browser side connector to NeoAtlantis Slate, a password protection module.",
    "version": "1.0",
    "background": {
        "scripts": ["background.js"],
        "type": "module"
    },
    "permissions": [
        "clipboardRead",
        "clipboardWrite",
        "contextMenus",
        "tabs",
        "storage"
    ],
    "sidebar_action": {
        "default_title": "NeoAtlantis Slate",
        "default_panel": "options.html"
    },
    "action": {
        "default_title": "NeoAtlantis Slate",
        "default_popup": "popup.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "slate@plugins.neoatlantis.org",
            "strict_min_version": "42.0"
        }
    },
    "content_security_policy": {
        "extension_pages": "base-uri 'self'; default-src 'none'; style-src 'sha256-79faf1c934ef289d90d7f043f29f5d645b5311c8a5f9c333c5978bffb85d3b68'; script-src 'self';"
    }
}
